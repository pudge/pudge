#!/usr/bin/perl -s
use warnings;
use strict;
use feature ':5.10';

our $o;
my $jira = shift;
my $name = shift || $ENV{GIT_USER} || $ENV{USER};

my @branches = `git branch -a | grep -i $jira 2>/dev/null`;
my %branches;
for (@branches) {
    chomp;
    s/^\s*\*//;
    s/^\s+//;
    s/\s+$//;
    s|remotes/origin/||;
    next if m|^base/|i; # ignore "base/" branches
    next unless m|^\w+/(?:\w+-)?$jira|i;
    $_ = 'origin/' . $_ if $o;
    $branches{$_}++;
}

my @sorted = sort {
    sort_bool(sub { $_[0] =~ m|^\Q$name\E/| })
        ||
    $a cmp $b
} keys %branches;


if (!@sorted) {
    say STDERR "No branches found.";
    exit -1;
}
if (@sorted > 1) {
    say STDERR "Too many branches found:";
    my $c = 0;
    say STDERR join "\n", map { ($c++ ? '  ' : '* ') . $_  } @sorted;
    exit -1;
}

say $sorted[0];

sub sort_bool {
    my($bool) = @_;
    $bool->($a) ? -1 : 0 || $bool->($b) ? 1 : 0
}

__END__
