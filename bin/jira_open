#!/usr/bin/perl
use warnings;
use strict;
use feature ':5.10';

use FindBin '$Bin';

my($id) = @ARGV;
$id //= '';

chomp($id = `$Bin/jira_id \Q$id\E`);
my $host = $ENV{'JIRA_HOST'} || die "no jira host";
my $url = "https://$host/browse/$id";

if ($id && $id =~ /^\w+-\d+$/) {
#    system 'open', '-b', 'com.atlassian.jira.mac', $url;
    system 'open', $url;
}
