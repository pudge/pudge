#!/usr/bin/perl
use warnings;
use strict;
use feature ':5.10';
use File::Temp 'tempfile';

my $mess = '';
chomp(my $id = uc `jira_id`);
if ($id) {
    $mess = "Ticket: $id";
}

my($fh, $filename) = tempfile();
my $template = <<EOT;


Ticket: $id
EOT

print $fh $template;

system 'git', 'commit', '-t', $filename, '-e', @ARGV;
