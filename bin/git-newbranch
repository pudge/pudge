#!/usr/bin/perl -s
use warnings;
use strict;
use feature ':5.10';

our($jira, $j, $push, $p, $s);

my $desc = shift;
my $name = shift || $ENV{GIT_USER} || $ENV{USER};

if ($s) {
    chomp(my $new = lc `jira_id -s`);
    if ($desc) {
        $desc = $new . '-' . $desc;
        $desc =~ s/-+/-/g;
    }
    else {
        $desc = $new;
    }
}

# in case we fully formatted it already
my $branch = $desc =~ m|^\Q$name\E/| ? $desc : "$name/$desc";

system 'git', 'checkout', '-b', $branch;
exit if $?;

if ($jira || $j) {
    chomp(my $ticket = uc `jira_id $desc`);
    system 'git', 'commit', '-m', "[$ticket] #in-progress", '--no-verify', '--allow-empty';
    exit if $?;
}

if ($push || $p) {
    system 'git', 'push', '-u';
    exit if $?;
}
