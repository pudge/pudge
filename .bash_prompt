    if [[ "$BASH_NEW" -eq 1 ]]; then
        local git_http_url=$(get-git-url -b $(pwd))
        if [[ -n "$git_http_url" ]]; then
            echo -ne "Â \e]8;;"$git_http_url"\e\\î‚ \e]8;;\e\\"
        else
